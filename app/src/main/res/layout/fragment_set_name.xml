<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/place_name_top_frame"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/normal_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                style="@style/Text.Header"
                android:id="@+id/place_name_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:textColor="@color/light_white"
                android:text="@string/place_set_name_title"

                />
    </FrameLayout>

    <EditText
            android:id="@+id/place_name_edit"
            android:layout_width="0dp"
            android:layout_height="56dp"

            android:hint="@string/place_name_hint"

            android:layout_margin="16dp"

            app:layout_constraintBottom_toTopOf="@+id/place_name_bottom_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place_name_top_frame" />

    <FrameLayout
            android:id="@+id/place_name_bottom_frame"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/light_white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible">

        <Button
                style="@style/Text.Button"
                android:id="@+id/place_name_save_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@color/normal_blue"
                android:text="@string/place_action_save"
                />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>